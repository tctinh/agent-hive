{
  "name": "vscode-hive",
  "displayName": "Agent Hive",
  "description": "From Vibe Coding to Hive Coding - Review and approve AI-generated plans",
  "version": "1.1.1",
  "publisher": "tctinh",
  "license": "MIT WITH Commons-Clause",
  "icon": "icon.png",
  "repository": {
    "type": "git",
    "url": "https://github.com/tctinh/agent-hive.git",
    "directory": "packages/vscode-hive"
  },
  "homepage": "https://github.com/tctinh/agent-hive#readme",
  "bugs": {
    "url": "https://github.com/tctinh/agent-hive/issues"
  },
  "keywords": [
    "ai",
    "hive",
    "vibe-coding",
    "opencode",
    "planning",
    "workflow"
  ],
  "engines": {
    "vscode": "^1.100.0"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [
    "onStartupFinished"
  ],
  "main": "./dist/extension.js",
  "contributes": {
    "languageModelTools": [
      {
        "name": "hive_feature_create",
        "displayName": "Create Hive Feature",
        "modelDescription": "Create a new Hive feature for plan-first development. Use at the start of any new work to establish a planning workspace with context, plan, and task tracking.",
        "canBeReferencedInPrompt": true,
        "toolReferenceName": "hiveFeatureCreate",
        "inputSchema": {
          "type": "object",
          "properties": {
            "name": {
              "type": "string",
              "description": "Feature name (kebab-case recommended)"
            },
            "ticket": {
              "type": "string",
              "description": "Optional ticket/issue reference"
            }
          },
          "required": [
            "name"
          ]
        }
      },
      {
        "name": "hive_feature_complete",
        "displayName": "Complete Hive Feature",
        "modelDescription": "Mark a feature as completed. Use when all tasks are done and the feature is ready for final integration. This is irreversible.",
        "canBeReferencedInPrompt": true,
        "toolReferenceName": "hiveFeatureComplete",
        "inputSchema": {
          "type": "object",
          "properties": {
            "name": {
              "type": "string",
              "description": "Feature name to mark as completed"
            }
          },
          "required": [
            "name"
          ]
        }
      },
      {
        "name": "hive_plan_write",
        "displayName": "Write Hive Plan",
        "modelDescription": "Write or update the plan.md for a feature. The plan defines tasks to execute. Use markdown with ### numbered headers for tasks. Clears existing comments when plan is rewritten.",
        "canBeReferencedInPrompt": true,
        "toolReferenceName": "hivePlanWrite",
        "inputSchema": {
          "type": "object",
          "properties": {
            "feature": {
              "type": "string",
              "description": "Feature name"
            },
            "content": {
              "type": "string",
              "description": "Plan content in markdown. Use ### 1. Task Name format for tasks."
            }
          },
          "required": [
            "feature",
            "content"
          ]
        }
      },
      {
        "name": "hive_plan_read",
        "displayName": "Read Hive Plan",
        "modelDescription": "Read the plan.md and any user comments for a feature. Use to check plan content, status, and user feedback before making changes.",
        "canBeReferencedInPrompt": true,
        "toolReferenceName": "hivePlanRead",
        "inputSchema": {
          "type": "object",
          "properties": {
            "feature": {
              "type": "string",
              "description": "Feature name"
            }
          },
          "required": [
            "feature"
          ]
        }
      },
      {
        "name": "hive_plan_approve",
        "displayName": "Approve Hive Plan",
        "modelDescription": "Approve a plan for execution. Use after user has reviewed the plan and resolved any comments. Changes feature status to approved.",
        "canBeReferencedInPrompt": true,
        "toolReferenceName": "hivePlanApprove",
        "inputSchema": {
          "type": "object",
          "properties": {
            "feature": {
              "type": "string",
              "description": "Feature name"
            }
          },
          "required": [
            "feature"
          ]
        }
      },
      {
        "name": "hive_tasks_sync",
        "displayName": "Sync Hive Tasks",
        "modelDescription": "Generate tasks from an approved plan. Parses ### numbered headers and creates task folders. Use after hive_plan_approve to create executable tasks.",
        "canBeReferencedInPrompt": true,
        "toolReferenceName": "hiveTasksSync",
        "inputSchema": {
          "type": "object",
          "properties": {
            "feature": {
              "type": "string",
              "description": "Feature name"
            }
          },
          "required": [
            "feature"
          ]
        }
      },
      {
        "name": "hive_task_create",
        "displayName": "Create Manual Task",
        "modelDescription": "Create a task manually, not from the plan. Use for ad-hoc work or tasks discovered during execution.",
        "canBeReferencedInPrompt": true,
        "toolReferenceName": "hiveTaskCreate",
        "inputSchema": {
          "type": "object",
          "properties": {
            "feature": {
              "type": "string",
              "description": "Feature name"
            },
            "name": {
              "type": "string",
              "description": "Task name"
            },
            "order": {
              "type": "number",
              "description": "Optional order number for the task"
            }
          },
          "required": [
            "feature",
            "name"
          ]
        }
      },
      {
        "name": "hive_task_update",
        "displayName": "Update Hive Task",
        "modelDescription": "Update a task status or summary. Use to track progress or add notes about completed work.",
        "canBeReferencedInPrompt": true,
        "toolReferenceName": "hiveTaskUpdate",
        "inputSchema": {
          "type": "object",
          "properties": {
            "feature": {
              "type": "string",
              "description": "Feature name"
            },
            "task": {
              "type": "string",
              "description": "Task folder name"
            },
            "status": {
              "type": "string",
              "enum": [
                "pending",
                "in_progress",
                "done",
                "cancelled"
              ],
              "description": "New status"
            },
            "summary": {
              "type": "string",
              "description": "Summary of what was done"
            }
          },
          "required": [
            "feature",
            "task"
          ]
        }
      },
      {
        "name": "hive_subtask_create",
        "displayName": "Create Subtask",
        "modelDescription": "Create a subtask within a task. Use for TDD workflows: test -> implement -> verify. Types: test, implement, review, verify, research, debug, custom.",
        "canBeReferencedInPrompt": true,
        "toolReferenceName": "hiveSubtaskCreate",
        "inputSchema": {
          "type": "object",
          "properties": {
            "feature": {
              "type": "string",
              "description": "Feature name"
            },
            "task": {
              "type": "string",
              "description": "Task folder name"
            },
            "name": {
              "type": "string",
              "description": "Subtask name"
            },
            "type": {
              "type": "string",
              "enum": [
                "test",
                "implement",
                "review",
                "verify",
                "research",
                "debug",
                "custom"
              ],
              "description": "Subtask type"
            }
          },
          "required": [
            "feature",
            "task",
            "name"
          ]
        }
      },
      {
        "name": "hive_subtask_update",
        "displayName": "Update Subtask",
        "modelDescription": "Update subtask status. Track progress through TDD cycle: pending -> in_progress -> done.",
        "canBeReferencedInPrompt": true,
        "toolReferenceName": "hiveSubtaskUpdate",
        "inputSchema": {
          "type": "object",
          "properties": {
            "feature": {
              "type": "string",
              "description": "Feature name"
            },
            "task": {
              "type": "string",
              "description": "Task folder name"
            },
            "subtask": {
              "type": "string",
              "description": "Subtask ID (e.g., 1.1)"
            },
            "status": {
              "type": "string",
              "enum": [
                "pending",
                "in_progress",
                "done",
                "cancelled"
              ],
              "description": "New status"
            }
          },
          "required": [
            "feature",
            "task",
            "subtask",
            "status"
          ]
        }
      },
      {
        "name": "hive_subtask_list",
        "displayName": "List Subtasks",
        "modelDescription": "List all subtasks for a task. Check TDD progress or see what work remains.",
        "canBeReferencedInPrompt": true,
        "toolReferenceName": "hiveSubtaskList",
        "inputSchema": {
          "type": "object",
          "properties": {
            "feature": {
              "type": "string",
              "description": "Feature name"
            },
            "task": {
              "type": "string",
              "description": "Task folder name"
            }
          },
          "required": [
            "feature",
            "task"
          ]
        }
      },
      {
        "name": "hive_subtask_spec_write",
        "displayName": "Write Subtask Spec",
        "modelDescription": "Write detailed instructions for a subtask in spec.md. Define what the subtask should accomplish.",
        "canBeReferencedInPrompt": true,
        "toolReferenceName": "hiveSubtaskSpecWrite",
        "inputSchema": {
          "type": "object",
          "properties": {
            "feature": {
              "type": "string",
              "description": "Feature name"
            },
            "task": {
              "type": "string",
              "description": "Task folder name"
            },
            "subtask": {
              "type": "string",
              "description": "Subtask ID (e.g., 1.1)"
            },
            "content": {
              "type": "string",
              "description": "Spec content in markdown"
            }
          },
          "required": [
            "feature",
            "task",
            "subtask",
            "content"
          ]
        }
      },
      {
        "name": "hive_subtask_report_write",
        "displayName": "Write Subtask Report",
        "modelDescription": "Write completion report for a subtask in report.md. Document what was done and any findings.",
        "canBeReferencedInPrompt": true,
        "toolReferenceName": "hiveSubtaskReportWrite",
        "inputSchema": {
          "type": "object",
          "properties": {
            "feature": {
              "type": "string",
              "description": "Feature name"
            },
            "task": {
              "type": "string",
              "description": "Task folder name"
            },
            "subtask": {
              "type": "string",
              "description": "Subtask ID (e.g., 1.1)"
            },
            "content": {
              "type": "string",
              "description": "Report content in markdown"
            }
          },
          "required": [
            "feature",
            "task",
            "subtask",
            "content"
          ]
        }
      },
      {
        "name": "hive_worktree_create",
        "displayName": "Create Task Worktree",
        "modelDescription": "Create a git worktree for a task. Isolates changes in a separate directory. Use when ready to implement a task.",
        "canBeReferencedInPrompt": true,
        "toolReferenceName": "hiveWorktreeCreate",
        "inputSchema": {
          "type": "object",
          "properties": {
            "feature": {
              "type": "string",
              "description": "Feature name"
            },
            "task": {
              "type": "string",
              "description": "Task folder name"
            }
          },
          "required": [
            "feature",
            "task"
          ]
        }
      },
      {
        "name": "hive_worktree_commit",
        "displayName": "Commit Task Worktree",
        "modelDescription": "Commit changes in worktree and mark task done. Does NOT merge - use hive_merge for that. Use when task implementation is finished.",
        "canBeReferencedInPrompt": true,
        "toolReferenceName": "hiveWorktreeCommit",
        "inputSchema": {
          "type": "object",
          "properties": {
            "feature": {
              "type": "string",
              "description": "Feature name"
            },
            "task": {
              "type": "string",
              "description": "Task folder name"
            },
            "summary": {
              "type": "string",
              "description": "Summary of what was done"
            }
          },
          "required": [
            "feature",
            "task",
            "summary"
          ]
        }
      },
      {
        "name": "hive_worktree_discard",
        "displayName": "Discard Task Worktree",
        "modelDescription": "Discard all changes and remove worktree. Use when task approach is wrong and needs restart. This is destructive and irreversible.",
        "canBeReferencedInPrompt": true,
        "toolReferenceName": "hiveWorktreeDiscard",
        "inputSchema": {
          "type": "object",
          "properties": {
            "feature": {
              "type": "string",
              "description": "Feature name"
            },
            "task": {
              "type": "string",
              "description": "Task folder name"
            }
          },
          "required": [
            "feature",
            "task"
          ]
        }
      },
      {
        "name": "hive_merge",
        "displayName": "Merge Task Branch",
        "modelDescription": "Merge a completed task branch into current branch. Supports merge, squash, or rebase strategies. Use after hive_exec_complete to integrate changes.",
        "canBeReferencedInPrompt": true,
        "toolReferenceName": "hiveMerge",
        "inputSchema": {
          "type": "object",
          "properties": {
            "feature": {
              "type": "string",
              "description": "Feature name"
            },
            "task": {
              "type": "string",
              "description": "Task folder name"
            },
            "strategy": {
              "type": "string",
              "enum": [
                "merge",
                "squash",
                "rebase"
              ],
              "description": "Merge strategy (default: merge)"
            }
          },
          "required": [
            "feature",
            "task"
          ]
        }
      },
      {
        "name": "hive_context_write",
        "displayName": "Write Context File",
        "modelDescription": "Write a context file to store research findings, decisions, or reference material. Context persists across sessions.",
        "canBeReferencedInPrompt": true,
        "toolReferenceName": "hiveContextWrite",
        "inputSchema": {
          "type": "object",
          "properties": {
            "feature": {
              "type": "string",
              "description": "Feature name"
            },
            "name": {
              "type": "string",
              "description": "Context file name (without .md)"
            },
            "content": {
              "type": "string",
              "description": "Context content in markdown"
            }
          },
          "required": [
            "feature",
            "name",
            "content"
          ]
        }
      },
      {
        "name": "hive_context_read",
        "displayName": "Read Context",
        "modelDescription": "Read a specific context file or all context for a feature. Use to understand background before starting work.",
        "canBeReferencedInPrompt": true,
        "toolReferenceName": "hiveContextRead",
        "inputSchema": {
          "type": "object",
          "properties": {
            "feature": {
              "type": "string",
              "description": "Feature name"
            },
            "name": {
              "type": "string",
              "description": "Context file name (optional)"
            }
          },
          "required": [
            "feature"
          ]
        }
      },
      {
        "name": "hive_context_list",
        "displayName": "List Context Files",
        "modelDescription": "List all context files for a feature. Shows what background information is available.",
        "canBeReferencedInPrompt": true,
        "toolReferenceName": "hiveContextList",
        "inputSchema": {
          "type": "object",
          "properties": {
            "feature": {
              "type": "string",
              "description": "Feature name"
            }
          },
          "required": [
            "feature"
          ]
        }
      },
      {
        "name": "hive_session_open",
        "displayName": "Open Hive Session",
        "modelDescription": "Open a session and get full feature context. Returns plan, tasks, context files, and session history. Use at the start of work to understand current state.",
        "canBeReferencedInPrompt": true,
        "toolReferenceName": "hiveSessionOpen",
        "inputSchema": {
          "type": "object",
          "properties": {
            "feature": {
              "type": "string",
              "description": "Feature name"
            },
            "task": {
              "type": "string",
              "description": "Optional task to focus on"
            }
          },
          "required": [
            "feature"
          ]
        }
      },
      {
        "name": "hive_session_list",
        "displayName": "List Sessions",
        "modelDescription": "List all sessions for a feature. Shows active and past sessions to understand who else is working.",
        "canBeReferencedInPrompt": true,
        "toolReferenceName": "hiveSessionList",
        "inputSchema": {
          "type": "object",
          "properties": {
            "feature": {
              "type": "string",
              "description": "Feature name"
            }
          },
          "required": [
            "feature"
          ]
        }
      }
    ],
    "viewsContainers": {
      "activitybar": [
        {
          "id": "hive",
          "title": "Hive",
          "icon": "resources/icons/hive.svg"
        }
      ]
    },
    "views": {
      "hive": [
        {
          "id": "hive.features",
          "name": "Features"
        }
      ]
    },
    "viewsWelcome": [
      {
        "view": "hive.features",
        "contents": "No Hive nest found in this workspace.\n\n[Init Hive Nest](command:hive.initNest)\n\nThis will create AI skill files for:\n- OpenCode (.opencode/skill/)\n- Claude (.claude/skills/)\n- GitHub Copilot (.github/agents/)",
        "when": "!hive.hasHiveRoot"
      }
    ],
    "commands": [
      {
        "command": "hive.initNest",
        "title": "Hive: Init Nest",
        "icon": "$(home)"
      },
      {
        "command": "hive.newFeature",
        "title": "Hive: New Feature",
        "icon": "$(add)"
      },
      {
        "command": "hive.refresh",
        "title": "Hive: Refresh",
        "icon": "$(refresh)"
      },
      {
        "command": "hive.openInOpenCode",
        "title": "Open in OpenCode",
        "icon": "$(terminal)"
      },
      {
        "command": "hive.viewReport",
        "title": "View Report",
        "icon": "$(book)"
      },
      {
        "command": "hive.openFile",
        "title": "Open File"
      },
      {
        "command": "hive.viewFeatureDetails",
        "title": "View Details",
        "icon": "$(info)"
      },
      {
        "command": "hive.openSession",
        "title": "Open Session in OpenCode",
        "icon": "$(link-external)"
      },
      {
        "command": "hive.revertStep",
        "title": "Revert Step",
        "icon": "$(discard)"
      },
      {
        "command": "hive.revertBatch",
        "title": "Revert Batch",
        "icon": "$(trash)"
      },
      {
        "command": "hive.executeBatch",
        "title": "Execute Batch",
        "icon": "$(run)"
      },
      {
        "command": "hive.plan.doneReview",
        "title": "Done Review",
        "icon": "$(check)"
      },
      {
        "command": "hive.comment.create",
        "title": "Add Comment",
        "enablement": "!commentIsEmpty"
      },
      {
        "command": "hive.comment.reply",
        "title": "Reply",
        "enablement": "!commentIsEmpty"
      },
      {
        "command": "hive.comment.resolve",
        "title": "Resolve Thread"
      },
      {
        "command": "hive.comment.delete",
        "title": "Delete Comment"
      },
      {
        "command": "hive.approvePlan",
        "title": "Approve Plan",
        "icon": "$(check)"
      },
      {
        "command": "hive.syncTasks",
        "title": "Generate Tasks",
        "icon": "$(list-tree)"
      },
      {
        "command": "hive.startTask",
        "title": "Start Task",
        "icon": "$(play)"
      },
      {
        "command": "hive.openSession",
        "title": "Open Session",
        "icon": "$(link-external)"
      }
    ],
    "menus": {
      "view/title": [
        {
          "command": "hive.newFeature",
          "when": "view == hive.features",
          "group": "navigation"
        },
        {
          "command": "hive.refresh",
          "when": "view == hive.features",
          "group": "navigation"
        }
      ],
      "view/item/context": [
        {
          "command": "hive.viewFeatureDetails",
          "when": "viewItem == feature",
          "group": "inline"
        },
        {
          "command": "hive.openInOpenCode",
          "when": "viewItem == step",
          "group": "inline"
        },
        {
          "command": "hive.viewReport",
          "when": "viewItem == feature"
        },
        {
          "command": "hive.openFile",
          "when": "viewItem == file"
        },
        {
          "command": "hive.openSession",
          "when": "viewItem == session",
          "group": "inline"
        },
        {
          "command": "hive.revertStep",
          "when": "viewItem == stepWithRevert",
          "group": "inline"
        },
        {
          "command": "hive.revertBatch",
          "when": "viewItem == batch",
          "group": "inline"
        },
        {
          "command": "hive.executeBatch",
          "when": "viewItem == batchPending",
          "group": "inline"
        },
        {
          "command": "hive.approvePlan",
          "when": "viewItem == plan-draft",
          "group": "inline"
        },
        {
          "command": "hive.syncTasks",
          "when": "viewItem =~ /^feature-(approved|executing)$/",
          "group": "inline"
        },
        {
          "command": "hive.startTask",
          "when": "viewItem == task-pending",
          "group": "inline"
        },
        {
          "command": "hive.openSession",
          "when": "viewItem == session",
          "group": "inline"
        }
      ],
      "editor/title": [
        {
          "command": "hive.plan.doneReview",
          "when": "resourceFilename == plan.md",
          "group": "navigation"
        }
      ],
      "comments/commentThread/context": [
        {
          "command": "hive.comment.create",
          "group": "inline",
          "when": "commentController == hive-plan-review && commentThreadIsEmpty"
        },
        {
          "command": "hive.comment.reply",
          "group": "inline",
          "when": "commentController == hive-plan-review && !commentThreadIsEmpty"
        },
        {
          "command": "hive.comment.resolve",
          "group": "inline",
          "when": "commentController == hive-plan-review && !commentThreadIsEmpty"
        }
      ],
      "comments/comment/title": [
        {
          "command": "hive.comment.delete",
          "group": "inline",
          "when": "commentController == hive-plan-review"
        }
      ]
    }
  },
  "scripts": {
    "build": "esbuild src/extension.ts --bundle --outfile=dist/extension.js --external:vscode --format=cjs --platform=node --sourcemap --define:import.meta.url=__importMetaUrl --banner:js=\"const __importMetaUrl = require('url').pathToFileURL(__filename).href;\" && vsce package --no-dependencies -o vscode-hive.vsix",
    "watch": "npm run build -- --watch",
    "build:types": "tsc --emitDeclarationOnly"
  },
  "devDependencies": {
    "@types/vscode": "^1.100.0",
    "@vscode/vsce": "^3.7.1",
    "esbuild": "^0.27.2",
    "typescript": "^5.0.0"
  },
  "dependencies": {
    "@opencode-ai/sdk": "^1.1.1",
    "hive-core": "workspace:*"
  }
}
