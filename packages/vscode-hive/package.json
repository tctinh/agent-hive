{
  "name": "vscode-hive",
  "displayName": "Hive",
  "description": "Context-Driven Development UI",
  "version": "0.3.0",
  "publisher": "tctinh",
  "license": "CC-BY-NC-4.0",
  "engines": {
    "vscode": "^1.80.0"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [
    "workspaceContains:.hive"
  ],
  "main": "./dist/extension.js",
  "contributes": {
    "viewsContainers": {
      "activitybar": [
        {
          "id": "hive",
          "title": "Hive",
          "icon": "resources/icons/hive.svg"
        }
      ]
    },
    "views": {
      "hive": [
        {
          "id": "hive.features",
          "name": "Features"
        }
      ]
    },
    "commands": [
      {
        "command": "hive.newFeature",
        "title": "Hive: New Feature",
        "icon": "$(add)"
      },
      {
        "command": "hive.refresh",
        "title": "Hive: Refresh",
        "icon": "$(refresh)"
      },
      {
        "command": "hive.openInOpenCode",
        "title": "Open in OpenCode",
        "icon": "$(terminal)"
      },

      {
        "command": "hive.viewReport",
        "title": "View Report",
        "icon": "$(book)"
      },
      {
        "command": "hive.openFile",
        "title": "Open File"
      },
      {
        "command": "hive.viewFeatureDetails",
        "title": "View Details",
        "icon": "$(info)"
      },
      {
        "command": "hive.openSession",
        "title": "Open Session in OpenCode",
        "icon": "$(link-external)"
      },
      {
        "command": "hive.revertStep",
        "title": "Revert Step",
        "icon": "$(discard)"
      },
      {
        "command": "hive.revertBatch",
        "title": "Revert Batch",
        "icon": "$(trash)"
      },
      {
        "command": "hive.executeBatch",
        "title": "Execute Batch",
        "icon": "$(run)"
      }
    ],
    "menus": {
      "view/title": [
        {
          "command": "hive.newFeature",
          "when": "view == hive.features",
          "group": "navigation"
        },
        {
          "command": "hive.refresh",
          "when": "view == hive.features",
          "group": "navigation"
        }
      ],
      "view/item/context": [
        {
          "command": "hive.viewFeatureDetails",
          "when": "viewItem == feature",
          "group": "inline"
        },
        {
          "command": "hive.openInOpenCode",
          "when": "viewItem == step",
          "group": "inline"
        },

        {
          "command": "hive.viewReport",
          "when": "viewItem == feature"
        },
        {
          "command": "hive.openFile",
          "when": "viewItem == file"
        },
        {
          "command": "hive.openSession",
          "when": "viewItem == session",
          "group": "inline"
        },
        {
          "command": "hive.revertStep",
          "when": "viewItem == stepWithRevert",
          "group": "inline"
        },
        {
          "command": "hive.revertBatch",
          "when": "viewItem == batch",
          "group": "inline"
        },
        {
          "command": "hive.executeBatch",
          "when": "viewItem == batchPending",
          "group": "inline"
        }
      ]
    }
  },
  "scripts": {
    "build": "esbuild src/extension.ts --bundle --outfile=dist/extension.js --external:vscode --format=cjs --platform=node --sourcemap",
    "watch": "npm run build -- --watch",
    "build:types": "tsc --emitDeclarationOnly"
  },
  "devDependencies": {
    "@types/vscode": "^1.80.0",
    "esbuild": "^0.27.2",
    "typescript": "^5.0.0"
  },
  "dependencies": {
    "@opencode-ai/sdk": "^1.1.1",
    "simple-git": "^3.27.0"
  }
}
